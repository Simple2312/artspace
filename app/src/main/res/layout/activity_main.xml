<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="52dp"
        android:text="Hey! Are you ready to explore art?"
        android:textAlignment="center"
        android:textColor="#291e5d"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/SplashScreenImage"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="@+id/SplashScreenImage"
        app:layout_constraintTop_toTopOf="@+id/SplashScreenImage" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="311dp"
        android:fontFamily="cursive"
        android:text=" Art is a lie that makes us realise the truth - Pablo Picasso"
        android:textAlignment="center"
        android:textColor="#3944bc"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/materialButton4"
        app:layout_constraintEnd_toEndOf="@+id/SplashScreenImage"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="@+id/SplashScreenImage"
        app:layout_constraintTop_toBottomOf="@+id/materialButton6" />

    <ImageView
        android:id="@+id/SplashScreenImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/work"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/materialButton4"
        android:layout_width="140dp"
        android:layout_height="0dp"
        android:layout_marginStart="111dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#5050a2"
        android:shadowColor="@color/black"
        android:text="art card"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/materialButton5"
        app:layout_constraintEnd_toEndOf="@+id/SplashScreenImage"
        app:layout_constraintStart_toStartOf="@+id/SplashScreenImage"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />


    <Button
        android:id="@+id/materialButton5"
        android:layout_width="140dp"
        android:layout_height="0dp"
        android:layout_marginStart="111dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#d8d5ff"
        android:shadowColor="@color/black"
        android:text="art journal"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/SplashScreenImage"
        app:layout_constraintStart_toStartOf="@+id/SplashScreenImage"
        app:layout_constraintTop_toBottomOf="@+id/materialButton4" />

    <Button
        android:id="@+id/materialButton6"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:layout_marginStart="255dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="106dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#fff"
        android:text="Explore"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="@+id/SplashScreenImage"
        app:layout_constraintStart_toStartOf="@+id/SplashScreenImage"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="32dp"
        android:text="Art"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/SplashScreenImage"
        app:layout_constraintTop_toTopOf="@+id/SplashScreenImage" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="204dp"
        android:text="Space"
        android:textAlignment="center"
        android:textColor="#291e5d"
        android:textColorHint="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/SplashScreenImage"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/SplashScreenImage" />

    <ImageView
        android:id="@+id/cat"
        android:layout_width="300dp"
        android:layout_height="111dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="456dp"
        android:layout_marginEnd="106dp"
        android:src="@drawable/cat"
        app:layout_constraintEnd_toEndOf="@+id/SplashScreenImage"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="@+id/SplashScreenImage"
        app:layout_constraintTop_toTopOf="@+id/SplashScreenImage" />


</androidx.constraintlayout.widget.ConstraintLayout>